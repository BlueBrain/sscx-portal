{
  "name": "sscx-portal",
  "description": "The Somatosensory Cortex Data Explorer",
  "version": "1.2.0",
  "author": "Blue Brain project",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "start": "parcel -p 8080 watch src/index.html",
    "build": "tsc --noEmit && parcel build src/index.html",
    "build:data": "ts-node --skip-project scripts/buildData.ts",
    "lint": "eslint \"./src/**/*.{ts,tsx,js,jsx}\"",
    "style": "prettier --check \"./src/**/*.{ts,tsx,js,jsx,less,html,css}\""
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "abort-controller": "^3.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-html": "^6.0.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-css-modules": "^2.1.0",
    "less": "^3.11.0",
    "lint-staged": "^10.0.3",
    "node-fetch": "^2.6.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "ts-jest": "^25.0.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@bbp/nexus-sdk": "^1.2.1",
    "@bbp/react-nexus": "^1.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-icons": "^3.9.0",
    "react-router-dom": "^5.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts, tsx, js, jsx, html, css}": [
      "yarn style --write",
      "yarn lint --fix"
    ]
  }
}
