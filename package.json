{
  "name": "sscx-portal",
  "description": "The Somatosensory Cortex Data Explorer",
  "version": "1.2.0",
  "author": "Blue Brain project",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "serve": "parcel serve -p 3000 ./src/index.html",
    "build": "tsc --noEmit && parcel build ./src/index.html",
    "build:data": "ts-node --skip-project scripts/buildData.ts",
    "lint": "eslint \"./src/**/*.{ts,tsx,js,jsx}\"",
    "style": "prettier --check \"./src/**/*.{ts,tsx,js,jsx,less,html,css}\""
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "abort-controller": "^3.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-html": "^6.0.0",
    "http-proxy-middleware": "^1.0.5",
    "husky": "^4.2.1",
    "jest": "^26.0.0",
    "jest-css-modules": "^2.1.0",
    "less": "^3.11.0",
    "lint-staged": "^10.0.3",
    "node-fetch": "^2.6.0",
    "parcel": "^2.0.0-nightly.462",
    "prettier": "^2.0.0",
    "ts-jest": "^26.0.0",
    "ts-loader": "^8.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "@bbp/nexus-sdk": "^1.2.1",
    "@bbp/react-nexus": "^1.2.1",
    "@reduxjs/toolkit": "^1.2.5",
    "antd": "^4.8.5",
    "file-saver": "^2.0.5",
    "flexboxgrid": "^6.3.1",
    "lodash": "^4.17.19",
    "plyr": "^3.6.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-helmet": "^6.0.0",
    "react-icons": "^3.9.0",
    "react-image-lightbox": "^5.1.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "tsc --noEmit"
    }
  },
  "lint-staged": {
    "*.{ts, tsx, js, jsx, html, css}": [
      "yarn style --write",
      "yarn lint --fix"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
